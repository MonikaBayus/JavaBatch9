package class08;

public class BreakKeyword {

	public static void main(String[] args) {
		
		
		boolean rain=true;
		int temp=40;
		
		while(rain) {
			System.out.println("I will stay at home");
			
			if(temp>75) {
				System.out.println("I will walk in a rain");
				break;
			}
			
				temp+=2;
			
			//System.out.println("I am a code inside the loop");CE: unreachible code;
		
		}
		for(int i=1; i<=10; i++) {
			System.out.println("Hello");
			
			if(i==5) {
			break; //breaks loop -> execute ones
				
			}
			System.out.println("I am a code inside the loop");
			
		}

	}

}
